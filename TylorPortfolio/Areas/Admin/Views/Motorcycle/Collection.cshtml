@{
    string videoPath = "/videos/motorcycle/";
    string picturePath = "/Images/home/motorcycle/";
    //string appDataDir = Environment.GetFolderPath(Environment.SpecialFolder.ApplicationData) + "\\TylorTrubPortfolio";
    string appDataDirApp = Environment.GetFolderPath(Environment.SpecialFolder.ApplicationData) + "\\TylorTrubPortfolio\\";

    bool DownloadImage(string imageName, byte[] imageBytes)
    {
        try
        {
            if (!Directory.Exists(appDataDirApp))
            {
                Directory.CreateDirectory(appDataDirApp);
            }
            // check if image already exists before wasting bandwidth.
            if (!File.Exists(appDataDirApp + imageName))
            {
                File.WriteAllBytes(appDataDirApp + imageName, imageBytes);
            }
        }
        catch (Exception)
        {
            
        }

        return true;
    }
}

