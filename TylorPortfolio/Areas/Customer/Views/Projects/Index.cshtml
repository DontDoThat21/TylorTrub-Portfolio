@{
}

@model List<Project>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Project Name
        </th>
        <th>
            Language
        </th>
        <th>
            Project photo
        </th>
        <th>
            GitHub URL
        </th>
    </tr>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>
                    @project.Name
                </td>
                <td>
                    @project.Language
                </td>
                <td>
                    <img src="~/Images/project/@project.ProjectPhoto" width="400px" height="300px">
                </td>
                <td>
                    <a>
                        @project.Url
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>